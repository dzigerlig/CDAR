<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cdar</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password"></property>
<property name="hibernate.connection.pool_size">10</property>
<property name="show_sql">true</property>
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="hibernate.current_session_context_class">thread</property>
<property name="hbm2ddl.auto">validate</property>

<mapping class="cdar.dal.persistence.hibernate.user.UserDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.KnowledgeTreeDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.KnowledgeTemplateDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.KnowledgeNodeDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.KnowledgeSubNodeDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.KnowledgeNodeLinkDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeproducer.DictionaryDao" />


<mapping class="cdar.dal.persistence.hibernate.knowledgeconsumer.KnowledgeProjectTreeDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeconsumer.KnowledgeProjectNodeDao" />
<mapping class="cdar.dal.persistence.hibernate.knowledgeconsumer.KnowledgeProjectSubNodeDao" />


</session-factory>
</hibernate-configuration>